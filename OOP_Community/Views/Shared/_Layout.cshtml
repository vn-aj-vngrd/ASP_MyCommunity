<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My Community</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Fav Icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="../Assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="../Assets/img/favicon-32x32.png">
    <link rel="manifest" href="../assets/img/site.webmanifest">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="../Assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="../Assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="../Assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="../Assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="../Assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="../Assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Modal Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
</head>
<body>

    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Index","Home")" class="logo d-flex align-items-center">
                <img src="../Assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">My Community</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div>

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="../Assets/img/user.png" alt="Profile" class="rounded-circle">
                        <span class="d-none d-md-block dropdown-toggle ps-2">@Session["FullName"]</span>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>@Session["FullName"]</h6>
                            <span>@Session["Email"]</span>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a href="@Url.Action("Settings","Home")" class="dropdown-item d-flex align-items-center">
                                <i class="bi bi-gear"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a href="@Url.Action("Logout","Home")" class="dropdown-item d-flex align-items-center">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Log Out</span>
                            </a>
                        </li>

                    </ul>
                </li>

            </ul>
        </nav>

    </header>

    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a href="@Url.Action("Index","Home")" class="nav-link collapsed">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li>


            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#resident-nav" data-bs-toggle="collapse">
                    <i class="bi bi-people"></i><span>Resident</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="resident-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                    <li>
                        <span>@Html.ActionLink("Create Resident", "CreateResident", "Resident")</span>
                    </li>
                    <li>
                        <span>@Html.ActionLink("Manage Resident", "ManageResident", "Resident")</span>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#due-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-cash-stack"></i><span>Monthly Dues</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="due-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                    <li>
                        <div>
                            <span>@Html.ActionLink("Create Monthly Dues", "CreateMonthlyDues", "MonthlyDues")</span>
                        </div>
                    </li>
                    <li>
                        <div>
                            <span>@Html.ActionLink("Manage Monthly Dues", "ManageMonthlyDues", "MonthlyDues")</span>
                        </div>
                    </li>
                </ul>
            </li>

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#project-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-clipboard"></i><span>Project</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="project-nav" class="nav-content collapse" data-bs-parent="#sidebar-nav">
                    <li>
                        <div>
                            <span>@Html.ActionLink("Create Project", "CreateProject", "Project")</span>
                        </div>
                    </li>
                    <li>
                        <div>
                            <span>@Html.ActionLink("Manage Project", "ManageProject", "Project")</span>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>

    </aside>

    <main id="main" class="main">
        @RenderBody()
    </main>

    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; @DateTime.Now.Year . <strong><span>My Community</span></strong>
        </div>
        <div class="credits">
            Created by <a href="">Van AJ Vanguardia</a>
        </div>
    </footer>

    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <script src="../Assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="../Assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../Assets/vendor/chart.js/chart.min.js"></script>
    <script src="../Assets/vendor/echarts/echarts.min.js"></script>
    <script src="../Assets/vendor/quill/quill.min.js"></script>
    <script src="../Assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="../Assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="../Assets/vendor/php-email-form/validate.js"></script>

    <script src="../Assets/js/main.js"></script>
</body>
</html>
